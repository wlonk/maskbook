%nav.navbar.navbar-default.navbar-fixed-top
  .container-fluid
    .navbar-header
      %button{                              |
        type: "button",                     |
        class: "navbar-toggle collapsed",   |
        "data-toggle": "collapse",          |
        "data-target": "#navbar-collapse",  |
        "aria-expanded": "false",           |
      }                                     |
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Maskbook", root_path, class: "navbar-brand"
    #navbar-collapse.navbar-collapse.collapse
      %ul.nav.navbar-nav
        %li= link_to "Villains", villains_path
        - if user_signed_in?
          %li= link_to "My villains", {                                     |
            controller: "villains",                                         |
            action: "index",                                                |
            "s[search_query]": quote_if_needed("user:#{current_user.name}") |
          }                                                                 |
        - if user_signed_in?
          %li= link_to "Favorite villains", { |
            controller: "villains",           |
            action: "index",                  |
            "s[stars]": (current_user.id)     |
          }                                   |
        %li= link_to "Organizations", organizations_path
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li.dropdown
            %a{href: "#", class: "dropdown-toggle", "data-toggle": "dropdown"}
              Account
              %b.caret
            </a>
            %ul.dropdown-menu
              %li= link_to 'Edit profile', edit_user_registration_path
              %li= link_to "Logout", destroy_user_session_path, method: :delete
        - else
          %li= link_to "Sign up", new_user_registration_path
          %li= link_to "Login", new_user_session_path
